<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <header>
                    <!-- Asignar, cambia estado a asignado y pone a true el campo asignado, visible s칩lo con estado = nuevo -->
                    <button string="Assign" name="state_to_assign" type="object" states="new"/>
                    <!-- En proceso, visible s칩lo con estado = asignado -->
                    <button string="In process" name="state_to_inprocess" type="object" states="assigned"/>
                    <!-- Pendiente, visible s칩lo con estado = en proceso o asignado -->
                    <button string="Pending" name="state_to_pending" type="object" states="inprocess,assigned"/>
                    <!-- Finalizar, visible en cualquier estado, menos cancelado y finalizado -->
                    <button string="Finalize" name="state_to_finalize" type="object" attrs="{'invisible': ['|', ('state', '=', 'canceled'), ('state', '=', 'finalized')]}"/>
                    <!-- Cancelar, visible si no est치 cancelado -->
                    <button string="Cancel" name="state_to_cancel" type="object" attrs="{'invisible': [('state', '!=', 'canceled')]}"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="date_limit"/>
                        </group>
                        <group>
                            <field name="assigned"/>
                            <field name="time"/>
                        </group>
                    </group>                
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Quality">
                            <group string="Corrective Action">
                                <field name="action_corrective" nolabel="1"/>
                            </group>
                            <group string="Preventive Action">
                                <field name="action_preventive" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>