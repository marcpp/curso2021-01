    <record id="helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record> -->

    <!-- Menú -->
    <menuitem id="helpdesk_menu_root" name="Helpdesk" sequence="10"/>
    <menuitem id="helpdesk_menu_submenu" name="Helpdesk" sequence="10" parent="helpdesk_menu_root"/>
    <menuitem id="helpdesk_menu_ticket" name="Ticket" sequence="10" parent="helpdesk_menu_submenu" action="helpdesk_ticket_action"/>

</odoo>