<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">tree,pivot,graph,calendar,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new ticket
            </p>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <header>
                    <!-- Asignar, cambia estado a asignado y pone a true el campo asignado, visible sólo con estado = nuevo -->
                    <button string="Assign" name="state_to_assign" type="object" states="new"/>
                    <!-- En proceso, visible sólo con estado = asignado -->
                    <button string="In process" name="state_to_inprocess" type="object" states="assigned"/>
                    <!-- Pendiente, visible sólo con estado = en proceso o asignado -->
                    <button string="Pending" name="state_to_pending" type="object" states="inprocess,assigned"/>
                    <!-- Finalizar, visible en cualquier estado, menos cancelado y finalizado -->
                    <button string="Finalize" name="state_to_finalize" type="object" attrs="{'invisible': ['|', ('state', '=', 'canceled'), ('state', '=', 'finalized')]}"/>
                    <!-- Cancelar, visible si no está cancelado -->
                    <button string="Cancel" name="state_to_cancel" type="object" attrs="{'invisible': [('state', '!=', 'canceled')]}"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="date_limit"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="assigned"/>
                            <field name="ticket_qty"/>
                            <field name="time"/>
                        </group>
                    </group>                
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                            <group>
                                <field name="tag_name"/>
                                <button string="Create tag" name="create_tag" type="object"/>
                            </group>
                            <field name="tag_ids"/>
                        </page>
                        <page string="Actions">
                            <field name="action_ids" context="{'default_date':date}">
                            <!-- En el ticket tenemos un campo action_ids, y no tenemos definida una vista para 
                            el modelo al que apunta, crear una vista embevida, y vamos a ocultar el m2o en 
                            el formulario que aputna al o2m en el inverse_name. -->
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="time"/>
                                </tree>
                                <form>
                                    <group name="action">
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="time"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Quality">
                            <group string="Corrective Action">
                                <field name="action_corrective" nolabel="1"/>
                            </group>
                            <group string="Preventive Action">
                                <field name="action_preventive" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Ticket">
                <!-- filtrar por nombre y por usuario asignado -->
                <field name="name"/>
                <field name="user_id"/>
                <!-- filtrar tickets asignados -->
                <filter string="Assigned" name="assigned_to" domain="[('user_id', '!=', False)]"/>
                <!-- filtrar tickets sin date_limit -->
                <filter string="No date limit" name="date_limit" domain="[('date_limit', '!=', False)]"/>
                <!-- agrupar por date_limit -->
                <field string="Date limit" name="date_limit" context="{'group_by':'date_limit'}"/>
                <!-- agrupar por usuario asignado -->
                <field string="Assigned to" name="user_id" context="{'group_by':'user_id'}"/>
            </search>
        </field>
    </record>

    <record id="view_helpdesk_ticket_pivot" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Ticket">
                <!-- mostrar tiempo dedicado por usuario / mes -->
                <field name="user_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="time" type="measure" widget="float_time"/>
            </pivot>
        </field>
    </record>

    <record id="view_helpdesk_ticket_graph" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.graph</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <graph string="Ticket">
                <!-- mostrar tiempo dedicado por usuario -->
                <field name="user_id"/>
                <field name="time" type="measure" widget="float_time"/>
            </graph>
        </field>
    </record>

    <record id="view_helpdesk_ticket_calendar" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Tickets" date_start="date" color="user_id" hide_time="true" event_limit="5">
                <!-- por fecha mostrando cada usuario asignado -->
                <field name="user_id" avatar_field="image_128"/>
                <field name="name"/>
                <field name="user_id" filters="1" invisible="1"/>
            </calendar>
        </field>
    </record>

    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="user_id">
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                            <!-- mostrar en tarjeta usuario y tiempo dedicado
                            agrupar por usuario
                            extra: añadir un field color, para cambiar el color de la tarjeta, ver como está hecho en crm.lead -->
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <t t-set="color"/>
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date"/>
                                    <field name="time"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="o_kanban_record_buttom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="helpdesk_menu_root" name="Helpdesk" sequence="10"/>
    <menuitem id="helpdesk_menu_submenu" name="Helpdesk" sequence="10" parent="helpdesk_menu_root"/>
    <menuitem id="helpdesk_menu_ticket" name="Ticket" sequence="10" parent="helpdesk_menu_submenu" action="view_helpdesk_ticket_action"/>

</odoo>